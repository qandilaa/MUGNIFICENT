<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background foto kafe -->
    <ImageView
        android:id="@+id/bg_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/image_ob3" />

    <!-- Bagian bawah melengkung dengan logo dan teks -->
    <LinearLayout
        android:id="@+id/bottom_container"
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded_top_bg"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- Logo Mugnificent -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/logo_mugnificent"
            android:contentDescription="Logo Mugnificent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Judul -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESERVASI"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- Deskripsi -->
        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih mejamu, duduk, dan \n nikmati waktu bersantaimu \n bersama Mugnificent.."
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:textSize="20sp"
            android:layout_marginBottom="24dp" />

        <!-- Indicator Progress -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:orientation="horizontal"
            android:gravity="center">

            <View
                android:layout_width="40dp"
                android:layout_height="6dp"
                android:background="@drawable/progress_inactive"
                android:layout_marginEnd="8dp" />

            <View
                android:layout_width="40dp"
                android:layout_height="6dp"
                android:background="@drawable/progress_inactive"
                android:layout_marginEnd="8dp"/>

            <View
                android:layout_width="40dp"
                android:layout_height="6dp"
                android:background="@drawable/progress_active"
                android:layout_marginEnd="8dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
