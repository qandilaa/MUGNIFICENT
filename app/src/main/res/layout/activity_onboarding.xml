<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <!--  ViewPager2 untuk onboarding  -->
    <androidx.viewpager2.widget.ViewPager2 android:id="@+id/viewPager" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <LinearLayout android:id="@+id/progressContainer" android:layout_width="match_parent" android:layout_height="8dp" android:layout_alignParentBottom="true" android:layout_margin="90dp" android:orientation="horizontal" android:gravity="center">
        <View android:id="@+id/bar1" android:layout_width="0dp" android:layout_height="8dp" android:layout_weight="1" android:layout_marginEnd="4dp" android:background="@color/green_bg"/>
        <View android:id="@+id/bar2" android:layout_width="0dp" android:layout_height="8dp" android:layout_weight="1" android:layout_marginEnd="4dp" android:background="@color/green_bg"/>
        <View android:id="@+id/bar3" android:layout_width="0dp" android:layout_height="8dp" android:layout_weight="1" android:background="@color/green_bg"/>
    </LinearLayout>
    <Button android:id="@+id/btnStart" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Mulai" android:layout_alignParentBottom="true" android:layout_alignParentEnd="true" android:layout_margin="24dp" android:visibility="gone" android:backgroundTint="@color/brown_prim" android:textColor="@android:color/white"/>
</RelativeLayout>
