<!-- res/drawable/blurred_rounded_rectangle.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Blur Layer (semi-transparan untuk efek blur tiruan) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#AA173834" /> <!-- warna dengan alpha -->
            <corners android:radius="50dp" />
        </shape>
    </item>

    <!-- Foreground Layer -->
    <item android:left="5dp" android:top="5dp" android:right="5dp" android:bottom="5dp">
        <shape android:shape="rectangle">
            <solid android:color="#173834" />
            <corners android:radius="50dp" />
        </shape>
    </item>
</layer-list>
